<div id="masthead" class="half-bottom"> 
  <div class="container remove-bottom"> 
    <div class="four chubby columns"> 
      <h1 class="remove-bottom"><strong><%= link_to "cyro laughs", root_path %></strong></h1> 
    </div>
    <div class="eight chubby columns right add-top">
      <ul class="inline">
        <% if signed_in? %>
          <li class="left-padding-only"><%= link_to "Hi, #{current_user.display_name}", edit_user_registration_path %></li>
        <% end %>
        <li class="left-padding-only"><%= link_to "About", about_path %></li>
        <li class="left-padding-only" id="liked_count"><%= link_to "Liked (#{@liked_count})", liked_path %></li>
        <li class="left-padding-only"><%= link_to "Watched (#{@watched_count})", recent_path %></li>
        <li class="left-padding-only"><%= link_to "Submit video", new_video_path %></li>
        <% if signed_in? %>
          <li class="left-padding-only"><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
        <% else %>
          <li class="left-padding-only"><%= link_to "Sign in", new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<hr class="top-line"/>